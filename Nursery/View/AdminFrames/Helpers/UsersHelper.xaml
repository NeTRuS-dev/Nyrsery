<Page x:Class="Nursery.View.AdminFrames.Helpers.UsersHelper"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nursery.View.AdminFrames.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersHelper">

    <Grid Style="{StaticResource menuGrid}">
        <StackPanel>
            <Button Command="{Binding DeleteUser}" MinWidth="170" Content="Удалить пользователя" Style="{StaticResource defaultButton}" HorizontalAlignment="Center" Padding="10,0" Margin="0,5"/>
            <Button Command="{Binding UpThisUser}" MinWidth="230"  Content="Повысить статус пользователя" Style="{StaticResource defaultButton}" HorizontalAlignment="Center" Padding="10,0" Margin="0,5"/>
            <Button Command="{Binding DownThisUser}"  MinWidth="230" Content="Понизить статус пользователя" Style="{StaticResource defaultButton}" HorizontalAlignment="Center" Padding="10,0" Margin="0,5"/>
            <Button Command="{Binding RedactThis}"  MinWidth="200" Content="Редактировать профиль" Style="{StaticResource defaultButton}" HorizontalAlignment="Center" Padding="10,0" Margin="0,5"/>

        </StackPanel>
    </Grid>
</Page>
