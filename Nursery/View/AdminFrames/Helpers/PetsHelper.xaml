<Page x:Class="Nursery.View.AdminFrames.Helpers.PetsHelper"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nursery.View.AdminFrames.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PetsHelper">

    <Grid Style="{StaticResource menuGrid}">
        <StackPanel HorizontalAlignment="Center">
            <Button Content="Добавить питомца" Command="{Binding AddPet}"  Style="{StaticResource defaultButton}" Margin="0,10" Width="150"/>
            <Button Content="Удалить питомца" Command="{Binding DeletePet}" Style="{StaticResource defaultButton}" Margin="0,10"/>
            <Button Content="Редактировать питомца" Command="{Binding RedactPet}" Style="{StaticResource defaultButton}" Margin="0,10"/>

        </StackPanel>
    </Grid>
</Page>
