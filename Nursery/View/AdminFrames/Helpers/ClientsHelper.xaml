<Page x:Class="Nursery.View.AdminFrames.Helpers.ClientsHelper"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nursery.View.AdminFrames.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientsHelper">

    <Grid Style="{StaticResource menuGrid}">
        <StackPanel>
            <Button Command="{Binding ConfirmStatement}" Content="Одобрить заявку" Style="{StaticResource defaultButton}" HorizontalAlignment="Center" Padding="10,0" Margin="0,5"/>
            <Button Command="{Binding RejectStatement}" Content="Отклонить заявку" Style="{StaticResource defaultButton}" HorizontalAlignment="Center" Padding="10,0" Margin="0,5"/>

        </StackPanel>
    </Grid>
</Page>
