<Page x:Class="Nursery.View.ClientFrames.Helpers.MyPetsHelper"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nursery.View.ClientFrames.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyPetsHelper">

    <Grid Style="{StaticResource menuGrid}">
        <StackPanel VerticalAlignment="Center">
            <Button Content="Отдать в питомник" Command="{Binding GiveAwayThePet}" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource defaultButton}"/>

        </StackPanel>
    </Grid>
</Page>
